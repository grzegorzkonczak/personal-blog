{{#partial "content"}}
    <div class="entry-list">

        {{#each entries}}
            <article>
                <h2><a href="detail/{{ slug }}">{{title}}</a></h2>
                <p class="tags">Tags:
                    {{#each tags}}
                        |{{ this }}|
                    {{else}}
                        No tags for this entry
                    {{/each}}
                </p>
                <time datetime="{{entryDateTime}}">{{entryDateTime}}</time>
            </article>
        {{else}}
            <article>
                <h2>No content</h2>
            </article>
        {{/each}}
    </div>
{{/partial}}

{{> base.hbs}}