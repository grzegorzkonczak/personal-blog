{{#partial "content"}}
    <div class="edit-entry">
        {{#if entry }}
            <h2>Edit Entry</h2>
            <form action="/edit" method="post">
                <input type="hidden" name="slug" value="{{ entry.slug }}">
                <label for="title"> Title</label>
                <input type="text" name="title" value="{{ entry.title }}"><br>
                <label for="entry">Entry</label>
                <textarea rows="5" name="entry">{{ entry.entry }}</textarea>
                <label for="tags"> Tags</label>
                <input type="text" name="tags" value="{{#each entry.tags}}{{this}} {{/each}}">
                <input type="submit" value="Save Entry" class="button">
            <a href="/detail/{{ entry.slug }}" class="button button-secondary">Cancel</a>
        {{else}}
            <h2>Publish New Entry</h2>
            <form action="/" method="post">
                <label for="title"> Title</label>
                <input type="text" name="title"><br>
                <label for="entry">Entry</label>
                <textarea rows="5" name="entry"></textarea>
                <label for="tags"> Tags</label>
                <input type="text" name="tags" placeholder="Enter tags separated by spaces"><br>
                <input type="submit" value="Publish Entry" class="button">
                <a href="/" class="button button-secondary">Cancel</a>
        {{/if}}
        </form>
    </div>
{{/partial}}

{{> base.hbs}}